<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,Chrome=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewData["Title"] - 欢迎使用！</title>
    <link href="~/ui/css/other/icon.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/ui/css/font-awesome.css" rel="stylesheet" />
    <!-- 依 赖 样 式 -->
    <link href="~/lib/pear/css/pear.css" rel="stylesheet" />
    <!-- 加 载 样 式-->
    <link href="~/ui/css/load.css" asp-append-version="true" rel="stylesheet" />
    <!-- 布 局 样 式 -->
    <link href="~/ui/css/admin.css" asp-append-version="true" rel="stylesheet" />
    <!-- 主 题 更 换 -->
    <style id="pearadmin-bg-color"></style>
    @RenderSection("css", false)
</head>
<!-- 结 构 代 码 -->
<body class="layui-layout-body pear-admin">
    <!-- 布 局 框 架 -->
    <div class="layui-layout layui-layout-admin">
        @RenderBody()
    </div>
    <!-- 遮 盖 层 -->
    <div class="pear-cover"></div>
    <!-- 加 载 动 画-->
    <div class="loader-main">
        <div class="loader"></div>
    </div>
    <!-- 依 赖 脚 本 -->
    <script src="~/lib/layui/layui.js"></script>
    <script src="~/lib/pear/pear.js"></script>
    @RenderSection("scripts", false)
    <!-- 框 架 初 始 化 -->
    <script type="text/javascript">
        layui.use(['admin'], function () {
            var admin = layui.admin;

            admin.render();
        });
    </script>
</body>
</html>
