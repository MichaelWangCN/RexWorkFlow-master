@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,Chrome=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>用户登录</title>
    <link href="~/lib/pear/css/pear.css" rel="stylesheet" />
    <link href="~/ui/css/other/login.css" asp-append-version="true" rel="stylesheet" />
    <style type="text/css">
        .login-info {
            margin: 10px auto;
            text-align: center;
        }
    </style>
</head>
<body background="/ui/images/background2.svg" style="background-size: cover;">
    <form class="layui-form" action="javascript:void(0);">
        <div class="layui-form-item">
            <img class="logo" src="~/ui/images/logo.png" />
            <div class="title">Rex 工作流</div>
            <div class="desc">
                工作流引擎包括流程的节点管理、流向管理、流程样例管理等重要功能。
            </div>
        </div>
        <div class="layui-form-item">
            <input placeholder="请输入登录账号" hover class="layui-input" name="username" maxlength="20" lay-verify="username" autocomplete="off" />
        </div>
        <div class="layui-form-item">
            <input placeholder="请输入登录密码" type="password" hover class="layui-input" maxlength="50" name="password" lay-verify="password" autocomplete="off" />
        </div>
        <div class="layui-form-item">
            <input placeholder="请输入验证码" hover class="code layui-input layui-input-inline" maxlength="4" name="validatecode" lay-verify="validatecode" autocomplete="off" />
            <img src="/Sys/User/ShowValidateCode" class="codeImage" alt="图片验证码" title="点击刷新验证码" />
        </div>
        <div class="layui-form-item">
            <input type="checkbox" name="savePwd" title="记住密码" lay-skin="primary">
        </div>
        <div class="layui-form-item">
            <button class="pear-btn pear-btn-success login" lay-submit lay-filter="login">
                登 入
            </button>
            <div class="login-info">
                默认账号：Rex<br />
                默认密码：123
            </div>
        </div>
    </form>
    <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
    <!-- 资 源 引 入 -->
    <script src="~/lib/layui/layui.js"></script>
    <script src="~/lib/pear/pear.js"></script>
    <script src="~/src/sys/user/js/login.js" asp-append-version="true"></script>
</body>
</html>